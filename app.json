{
  "expo": {
    "name": "Expogram",
    "slug": "Expogram",
    "version": "1.0.0",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff",
        "package": "com.expogram.expogram"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },

    "plugins": [
      "expo-font",
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends."
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Allow Expogram to access your microphone."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Expogram to access your camera",
          "microphonePermission": "Allow Expogram to access your microphone",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow Expogram to access your photos.",
          "savePhotosPermission": "Allow Expogram to save photos.",
          "isAccessMediaLocationEnabled": true
        }
      ]
    ]
  }
}